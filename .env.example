# API Settings
API_TITLE=Prompt Evaluation API
API_VERSION=0.1.0

# AWS Settings (Required for Bedrock)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Database
DATABASE_URL=sqlite:///./prompt_eval.db

# Storage Backend
STORAGE_BACKEND=sqlite
S3_BUCKET_NAME=your-s3-bucket-name
TABLE_NAME=prompt-evaluations

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Mock Mode (Development/Testing)
# Set to 'true' for testing without AWS credentials
# Set to 'false' for production with real AWS Bedrock
MOCK_MODE=false

# Consistency Parameters
ALPHA=0.2

# Optional: Additional API Keys for Enhanced MCP Servers
# OPENAI_API_KEY=sk-your-openai-api-key-here
# PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here
# BRAVE_API_KEY=your-brave-search-api-key-here